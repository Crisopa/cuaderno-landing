        </div>
      </div>
    </section>

    <!-- Symbol Section -->
    <section class="symbol-section min-h-screen flex items-center justify-center py-32 relative">
      <div class="max-w-5xl mx-6 w-full">
        <div class="text-center mb-16">
          <p class="reveal text-sm uppercase tracking-[0.3em] text-primary-600 mb-4 font-medium">
            El logotipo
          </p>
          <h2 class="reveal text-3xl md:text-5xl font-semibold text-gray-900">
            M칰ltiples lecturas, un prop칩sito
          </h2>
        </div>

        <div class="reveal flex flex-col lg:flex-row items-center justify-center gap-12 lg:gap-16">
          <!-- Logo showcase -->
          <div class="logo-showcase-card flex-shrink-0">
            <svg
              class="w-32 h-32 md:w-40 md:h-40 text-primary-700"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M11.264 2.205A4 4 0 0 0 6.42 4.211l-4 8a4 4 0 0 0 1.359 5.117l6 4a4 4 0 0 0 4.438 0l6-4a4 4 0 0 0 1.576-4.592l-2-6a4 4 0 0 0-2.53-2.53z"/>
              <path d="M11.99 22 14 12l7.822 3.184"/>
              <path d="M14 12 8.47 2.302"/>
            </svg>
          </div>

          <!-- Interpretations -->
          <div class="grid grid-cols-1 sm:grid-cols-3 lg:grid-cols-1 gap-4">
            <div class="symbol-card-mini group">
              <div class="symbol-icon-mini">游붊</div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900">Cris치lida</h3>
                <p class="text-gray-500 text-sm font-light">Transformaci칩n constante</p>
              </div>
            </div>

            <div class="symbol-card-mini group">
              <div class="symbol-icon-mini">游뿯</div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900">Roca</h3>
                <p class="text-gray-500 text-sm font-light">Solidez y confianza</p>
              </div>
            </div>

            <div class="symbol-card-mini group">
              <div class="symbol-icon-mini">游눑</div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900">Gema</h3>
