---
import Layout from '../layouts/Layout.astro'
---

<Layout title="crisopa" description="La historia detr치s de crisopa">
  <div class="page-wrapper font-logo overflow-x-hidden">
    <!-- Mesh gradient background -->
    <div class="fixed inset-0 -z-10">
      <div class="mesh-bg"></div>
    </div>

    <!-- Hero -->
    <section class="hero min-h-screen flex flex-col items-center justify-center relative">
      <!-- Floating orbs -->
      <div class="orb orb-1"></div>
      <div class="orb orb-2"></div>
      <div class="orb orb-3"></div>

      <div class="logo-container flex flex-col items-center gap-8 relative z-10">
        <div class="icon-wrapper">
          <svg
