</Layout>

<style>
  .page-wrapper {
    font-family: 'Sora', sans-serif;
  }

  /* Mesh gradient background */
  .mesh-bg {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(at 40% 20%, rgba(134, 239, 172, 0.15) 0px, transparent 50%),
      radial-gradient(at 80% 0%, rgba(34, 197, 94, 0.1) 0px, transparent 50%),
      radial-gradient(at 0% 50%, rgba(251, 191, 36, 0.08) 0px, transparent 50%),
      radial-gradient(at 80% 50%, rgba(134, 239, 172, 0.1) 0px, transparent 50%),
      radial-gradient(at 0% 100%, rgba(34, 197, 94, 0.1) 0px, transparent 50%),
      linear-gradient(180deg, #fafafa 0%, #ffffff 50%, #fafafa 100%);
  }

  /* Floating orbs */
  .orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.6;
    animation: float 20s ease-in-out infinite;
  }

  .orb-1 {
    width: 400px;
    height: 400px;
    background: linear-gradient(135deg, #4ade80, #22c55e);
    top: 10%;
    left: 10%;
    animation-delay: 0s;
  }

  .orb-2 {
    width: 300px;
    height: 300px;
    background: linear-gradient(135deg, #fbbf24, #f59e0b);
    top: 50%;
    right: 10%;
    animation-delay: -7s;
  }

  .orb-3 {
    width: 350px;
    height: 350px;
    background: linear-gradient(135deg, #86efac, #4ade80);
    bottom: 10%;
    left: 30%;
    animation-delay: -14s;
  }

  @keyframes float {
    0%, 100% { transform: translate(0, 0) scale(1); }
    25% { transform: translate(30px, -30px) scale(1.05); }
    50% { transform: translate(-20px, 20px) scale(0.95); }
    75% { transform: translate(20px, 30px) scale(1.02); }
  }

  /* Logo animations */
  .icon-wrapper {
    position: relative;
  }

  .icon-wrapper::before {
    content: '';
    position: absolute;
    inset: -20px;
    background: radial-gradient(circle, rgba(34, 197, 94, 0.2) 0%, transparent 70%);
    border-radius: 50%;
    animation: pulse-soft 3s ease-in-out infinite;
  }

  .logo-icon {
    animation: scaleIn 1s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
    opacity: 0;
    position: relative;
    z-index: 1;
  }

  .logo-text {
    animation: fadeSlideUp 0.8s ease-out 0.3s forwards;
    opacity: 0;
  }

  .path-main {
    stroke-dasharray: 200;
    stroke-dashoffset: 200;
    animation: drawPath 1.5s ease-out 0.2s forwards;
  }

  .path-detail {
    stroke-dasharray: 50;
    stroke-dashoffset: 50;
    animation: drawPath 0.8s ease-out 1s forwards;
  }

  @keyframes pulse-soft {
    0%, 100% { transform: scale(1); opacity: 0.5; }
    50% { transform: scale(1.1); opacity: 0.3; }
  }

  @keyframes scaleIn {
    from { opacity: 0; transform: scale(0.5); }
    to { opacity: 1; transform: scale(1); }
  }

  @keyframes fadeSlideUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes drawPath {
    to { stroke-dashoffset: 0; }
  }

  /* Scroll cue */
  .scroll-cue {
    animation: fadeIn 1s ease-out 1.5s forwards;
    opacity: 0;
  }

  .mouse {
    width: 26px;
    height: 42px;
    border: 2px solid rgba(0, 0, 0, 0.2);
    border-radius: 13px;
    position: relative;
  }

  .mouse::before {
    content: '';
    position: absolute;
    top: 8px;
    left: 50%;
    transform: translateX(-50%);
    width: 4px;
    height: 8px;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 2px;
    animation: scroll-hint 2s ease-in-out infinite;
  }

  @keyframes scroll-hint {
    0%, 100% { opacity: 1; transform: translateX(-50%) translateY(0); }
    50% { opacity: 0.3; transform: translateX(-50%) translateY(10px); }
  }

  @keyframes fadeIn {
    to { opacity: 1; }
  }

  /* Glass card */
  .glass-card {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-radius: 32px;
    border: 1px solid rgba(255, 255, 255, 0.8);
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.05),
      0 20px 50px -12px rgba(0, 0, 0, 0.1);
  }

  /* Gradient text */
  .gradient-text {
    background: linear-gradient(135deg, #16a34a, #22c55e, #4ade80);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Symbol cards */
  .symbol-card {
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-radius: 24px;
    padding: 2.5rem;
    text-align: center;
    border: 1px solid rgba(255, 255, 255, 0.8);
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .symbol-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 30px 60px -12px rgba(0, 0, 0, 0.15);
    background: rgba(255, 255, 255, 0.9);
  }

  .symbol-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .symbol-card:hover .symbol-icon {
    transform: scale(1.2);
  }

  /* Logo showcase card */
  .logo-showcase-card {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-radius: 32px;
    padding: 3rem;
    border: 1px solid rgba(255, 255, 255, 0.8);
    box-shadow: 0 20px 50px -12px rgba(0, 0, 0, 0.1);
  }

  /* Mini symbol cards */
  .symbol-card-mini {
    display: flex;
    align-items: center;
    gap: 1rem;
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-radius: 16px;
    padding: 1.25rem 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.8);
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .symbol-card-mini:hover {
    transform: translateX(8px);
    background: rgba(255, 255, 255, 0.9);
    box-shadow: 0 10px 30px -8px rgba(0, 0, 0, 0.1);
  }

  .symbol-icon-mini {
    font-size: 2rem;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .symbol-card-mini:hover .symbol-icon-mini {
    transform: scale(1.15);
  }

  /* Pills */
  .pill {
    display: inline-flex;
    padding: 0.75rem 1.5rem;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(8px);
    border-radius: 100px;
    font-size: 0.875rem;
    font-weight: 500;
    color: #374151;
    border: 1px solid rgba(0, 0, 0, 0.05);
  }

  .pill-accent {
    background: linear-gradient(135deg, #22c55e, #16a34a);
    color: white;
    border: none;
  }

  /* CTA Section */
  .cta-section {
    background: linear-gradient(135deg, #064e3b 0%, #065f46 50%, #047857 100%);
  }

  .cta-mesh {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(at 20% 30%, rgba(134, 239, 172, 0.2) 0px, transparent 50%),
      radial-gradient(at 80% 70%, rgba(251, 191, 36, 0.15) 0px, transparent 50%),
      radial-gradient(at 50% 50%, rgba(34, 197, 94, 0.1) 0px, transparent 70%);
    animation: mesh-move 20s ease-in-out infinite;
  }

  @keyframes mesh-move {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(-20px, 20px); }
  }

  /* Buttons */
  .btn-glass {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 12px;
    color: white;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.3s ease;
  }

  .btn-glass:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
  }

  .btn-solid {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2rem;
    background: white;
    border-radius: 12px;
    color: #065f46;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.3s ease;
  }

  .btn-solid:hover {
    transform: translateY(-2px);
    box-shadow: 0 20px 40px -12px rgba(0, 0, 0, 0.3);
  }

  /* Reveal animations */
  .reveal {
    opacity: 0;
    transform: translateY(40px);
    transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .reveal.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Stagger children */
  .reveal:nth-child(1) { transition-delay: 0s; }
  .reveal:nth-child(2) { transition-delay: 0.1s; }
  .reveal:nth-child(3) { transition-delay: 0.2s; }
  .reveal:nth-child(4) { transition-delay: 0.3s; }
  .reveal:nth-child(5) { transition-delay: 0.4s; }

  /* Interactive letters */
  .letter-interactive {
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    display: inline-block;
    position: relative;
  }

  .letter-interactive:hover {
    color: #22c55e;
  }

  .letter-interactive.active {
    background: linear-gradient(135deg, #16a34a, #22c55e, #4ade80);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: letterPop 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  @keyframes letterPop {
    0% { transform: scale(1); }
    50% { transform: scale(1.3) rotate(-5deg); }
    100% { transform: scale(1) rotate(0deg); }
  }

  /* Founders message */
  .founders-message {
    opacity: 0;
    max-height: 0;
    overflow: hidden;
    transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .founders-message.visible {
    opacity: 1;
    max-height: 200px;
  }

  .founders-message p:first-child {
    animation: fadeSlideUp 0.6s ease-out forwards;
  }

  .founders-message p:last-child {
    animation: fadeSlideUp 0.6s ease-out 0.2s forwards;
    opacity: 0;
  }

  .founders-message.visible p:last-child {
    opacity: 1;
  }
</style>

<script>
  // Intersection Observer for reveals
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible')
        }
      })
    },
    { threshold: 0.1, rootMargin: '0px 0px -50px 0px' }
  )

  document.querySelectorAll('.reveal').forEach((el) => observer.observe(el))

  // Parallax effect
  const parallaxSections = document.querySelectorAll('[data-parallax]')

  window.addEventListener('scroll', () => {
    const scrolled = window.pageYOffset

    // Orbs parallax
    document.querySelectorAll('.orb').forEach((orb, i) => {
      const speed = 0.05 * (i + 1)
      const element = orb as HTMLElement
      element.style.transform = `translateY(${scrolled * speed}px)`
    })
  })

  // Smooth scroll indicator click
  document.querySelector('.scroll-cue')?.addEventListener('click', () => {
    document.querySelector('.story-section')?.scrollIntoView({ behavior: 'smooth' })
  })

  // Easter egg: Interactive letters i and p
  const interactiveLetters = document.querySelectorAll('.letter-interactive')
  const foundersReveal = document.getElementById('founders-reveal')
  const activatedLetters = new Set<string>()

  interactiveLetters.forEach((letter) => {
    letter.addEventListener('click', () => {
      const letterValue = letter.getAttribute('data-letter')
      if (letterValue && !activatedLetters.has(letterValue)) {
        activatedLetters.add(letterValue)
        letter.classList.add('active')

        // Check if both letters are activated
        if (activatedLetters.has('i') && activatedLetters.has('p')) {
          foundersReveal?.classList.add('visible')
        }
      }
    })
  })
</script>
