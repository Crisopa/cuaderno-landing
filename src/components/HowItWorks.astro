---
const steps = [
  {
    number: '01',
    title: 'Crea tu cuenta',
    description: 'Registra tu explotación con los datos básicos: nombre, código REAFA y poco más. En 5 minutos lo tienes.',
    icon: 'user-plus',
  },
  {
    number: '02',
    title: 'Añade lo que ya tienes',
    description: 'Parcelas, aplicadores, maquinaria... Lo registras una vez y ya está. No tendrás que volver a escribirlo en cada tratamiento.',
    icon: 'database',
  },
  {
    number: '03',
    title: 'Registra cuando toque',
    description: 'Cuando hagas un tratamiento o abonado, entras, lo registras en 2 minutos y sigues con tu trabajo. Sin papeleos.',
    icon: 'check-circle',
  },
]

const iconPaths: Record<string, string> = {
  'user-plus': 'M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z',
  'database': 'M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4',
  'check-circle': 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z',
}
---

<section id="como-funciona" class="relative py-24 sm:py-32 bg-gradient-to-b from-gray-50 to-white overflow-hidden">
  <!-- Background decorations -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute top-1/4 right-0 w-72 h-72 bg-primary-100/40 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 left-0 w-64 h-64 bg-accent-100/40 rounded-full blur-3xl"></div>
    <!-- Subtle pattern -->
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_1px_1px,rgba(0,0,0,0.03)_1px,transparent_0)] bg-[size:32px_32px]"></div>
  </div>

  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center max-w-3xl mx-auto" data-animate>
      <span class="inline-flex items-center rounded-full bg-gradient-to-r from-accent-100 to-accent-50 px-5 py-2 text-sm font-semibold text-accent-800 shadow-sm border border-accent-200/50">
        Cómo funciona
      </span>
      <h2 class="mt-6 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl lg:text-5xl">
        Configura una vez,
        <span class="text-primary-700">usa todo el año</span>
      </h2>
      <p class="mt-6 text-lg text-gray-600 leading-relaxed">
        La gracia es que no tengas que perder media mañana cada vez que registras algo.
      </p>
    </div>

    <!-- Steps -->
    <div class="mt-20 relative">
      <!-- Connection line - desktop -->
      <div class="hidden lg:block absolute top-24 left-[16.67%] right-[16.67%] h-0.5">
        <div class="absolute inset-0 bg-gradient-to-r from-primary-200 via-primary-400 to-primary-200 rounded-full"></div>
        <div class="absolute inset-0 bg-gradient-to-r from-primary-400 via-primary-600 to-primary-400 rounded-full animate-pulse-soft"></div>
      </div>

      <div class="grid gap-12 lg:grid-cols-3 lg:gap-8">
        {steps.map((step, index) => (
          <div
            class="relative group"
            data-animate
            style={`transition-delay: ${index * 150}ms;`}
          >
            <!-- Card -->
            <div class="relative bg-white rounded-3xl p-8 shadow-lg shadow-gray-900/5 border border-gray-100 transition-all duration-500 group-hover:shadow-xl group-hover:shadow-primary-900/10 group-hover:-translate-y-2">
              <!-- Gradient border on hover -->
              <div class="absolute -inset-px rounded-3xl bg-gradient-to-br from-primary-400 to-accent-400 opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10"></div>
              <div class="absolute inset-0 rounded-3xl bg-white"></div>

              <!-- Content -->
              <div class="relative">
                <!-- Number badge -->
                <div class="flex justify-center mb-8">
                  <div class="relative">
                    <!-- Glow effect -->
                    <div class="absolute inset-0 bg-primary-500/30 blur-xl rounded-full scale-0 group-hover:scale-150 transition-transform duration-700"></div>
                    <!-- Badge -->
                    <div class="relative flex h-20 w-20 items-center justify-center rounded-full bg-gradient-to-br from-primary-600 to-primary-800 text-white shadow-xl shadow-primary-900/30 transition-transform duration-500 group-hover:scale-110">
                      <span class="text-2xl font-bold">{step.number}</span>
                      <!-- Ring animation -->
                      <div class="absolute -inset-2 rounded-full border-2 border-primary-400/30 opacity-0 group-hover:opacity-100 group-hover:scale-110 transition-all duration-700"></div>
                      <div class="absolute -inset-4 rounded-full border border-primary-300/20 opacity-0 group-hover:opacity-100 group-hover:scale-110 transition-all duration-1000"></div>
                    </div>
                  </div>
                </div>

                <!-- Icon -->
                <div class="flex justify-center mb-6">
                  <div class="p-3 rounded-2xl bg-primary-50 text-primary-600 group-hover:bg-primary-100 transition-colors duration-300">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths[step.icon]} />
                    </svg>
                  </div>
                </div>

                <!-- Text -->
                <div class="text-center">
                  <h3 class="text-xl font-bold text-gray-900 group-hover:text-primary-800 transition-colors duration-300">
                    {step.title}
                  </h3>
                  <p class="mt-4 text-gray-600 leading-relaxed">
                    {step.description}
                  </p>
                </div>
              </div>
            </div>

            <!-- Arrow connector - mobile -->
            {index < steps.length - 1 && (
              <div class="flex justify-center my-6 lg:hidden">
                <svg class="w-6 h-6 text-primary-400 animate-bounce-soft" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
                </svg>
              </div>
            )}
          </div>
        ))}
      </div>
    </div>

    <!-- Bottom CTA hint -->
    <div class="mt-16 text-center" data-animate>
      <p class="text-gray-500 text-sm">
        Sin compromisos. Empieza en menos de lo que tarda un café.
      </p>
    </div>
  </div>
</section>
