---
const currentYear = new Date().getFullYear()

const footerLinks = {
  producto: [
    { label: 'Qué incluye', href: '#caracteristicas' },
    { label: 'Precios', href: '#precios' },
    { label: 'Dudas', href: '#faq' },
  ],
  legal: [
    { label: 'Términos de uso', href: '/terminos' },
    { label: 'Privacidad', href: '/privacidad' },
    { label: 'Cookies', href: '/cookies' },
  ],
  contacto: [
    { label: 'hola@appcrisopa.com', href: 'mailto:hola@appcrisopa.com' },
  ],
}
---

<footer class="bg-gray-900 text-gray-300">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
    <div class="grid gap-8 lg:grid-cols-4">
      <!-- Brand -->
      <div class="lg:col-span-1">
        <a href="/logo" class="flex items-center gap-2">
          <svg
            class="h-8 w-8 text-white"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M11.264 2.205A4 4 0 0 0 6.42 4.211l-4 8a4 4 0 0 0 1.359 5.117l6 4a4 4 0 0 0 4.438 0l6-4a4 4 0 0 0 1.576-4.592l-2-6a4 4 0 0 0-2.53-2.53z"/>
            <path d="M11.99 22 14 12l7.822 3.184"/>
            <path d="M14 12 8.47 2.302"/>
          </svg>
          <span class="font-logo text-xl font-bold text-white">crisopa</span>
        </a>
        <p class="mt-4 text-sm text-gray-400 max-w-xs">
          Cuaderno de explotación agrícola. Simple, legal y sin complicaciones.
        </p>
      </div>

      <!-- Producto -->
      <div>
        <h3 class="text-sm font-semibold text-white uppercase tracking-wider">
          Producto
        </h3>
        <ul class="mt-4 space-y-3">
          {footerLinks.producto.map(link => (
            <li>
              <a href={link.href} class="text-sm hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h3 class="text-sm font-semibold text-white uppercase tracking-wider">
          Legal
        </h3>
        <ul class="mt-4 space-y-3">
          {footerLinks.legal.map(link => (
            <li>
              <a href={link.href} class="text-sm hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contacto -->
      <div>
        <h3 class="text-sm font-semibold text-white uppercase tracking-wider">
          Contacto
        </h3>
        <ul class="mt-4 space-y-3">
          {footerLinks.contacto.map(link => (
            <li>
              <a href={link.href} class="text-sm hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom -->
    <div class="mt-12 pt-8 border-t border-gray-800">
      <p class="text-sm text-gray-500 text-center">
        © {currentYear} CRISOPA
      </p>
    </div>
  </div>
</footer>
