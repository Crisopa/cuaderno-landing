---
const appUrl = 'https://panel.crisopa.app'
---

<section class="relative py-16 sm:py-24 lg:py-32 overflow-hidden">
  <!-- Gradient background -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary-700 via-primary-800 to-primary-900"></div>

  <div class="relative mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 text-center" data-animate>
    <!-- Logo -->
    <div class="flex justify-center mb-6">
      <svg
        class="h-16 w-16 sm:h-20 sm:w-20 text-white"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M11.264 2.205A4 4 0 0 0 6.42 4.211l-4 8a4 4 0 0 0 1.359 5.117l6 4a4 4 0 0 0 4.438 0l6-4a4 4 0 0 0 1.576-4.592l-2-6a4 4 0 0 0-2.53-2.53z"/>
        <path d="M11.99 22 14 12l7.822 3.184"/>
        <path d="M14 12 8.47 2.302"/>
      </svg>
    </div>

    <!-- Brand name -->
    <h2 class="text-3xl sm:text-5xl lg:text-6xl font-bold text-white tracking-tight">
      crisopa
    </h2>

    <!-- Tagline -->
    <p class="mt-6 text-lg sm:text-xl text-primary-100">
      Software de gestión agrícola
      <span class="font-bold text-white"> hecho para el campo español.</span>
    </p>

    <!-- CTA Button -->
    <div class="mt-10">
      <a
        href={`${appUrl}/register`}
        class="group inline-flex items-center justify-center rounded-xl bg-white px-8 py-4 text-base font-semibold text-primary-800 shadow-xl transition-all duration-300 hover:bg-primary-50 hover:-translate-y-0.5 hover:shadow-2xl"
      >
        Prueba gratis
        <svg class="ml-2 h-5 w-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </div>

    <!-- Trust badges -->
    <div class="mt-8 sm:mt-10 flex flex-wrap items-center justify-center gap-3 sm:gap-6 text-sm text-primary-200">
      <div class="flex items-center gap-2">
        <svg class="w-4 h-4 text-accent-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
        </svg>
        <span>30 días gratis</span>
      </div>
      <div class="hidden sm:block w-px h-4 bg-primary-600"></div>
      <div class="flex items-center gap-2">
        <svg class="w-4 h-4 text-accent-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
        </svg>
        <span>Sin tarjeta</span>
      </div>
      <div class="hidden sm:block w-px h-4 bg-primary-600"></div>
      <div class="flex items-center gap-2">
        <svg class="w-4 h-4 text-accent-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
        </svg>
        <span>Cancela cuando quieras</span>
      </div>
    </div>
  </div>
</section>
